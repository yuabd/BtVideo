@model BtVideo.Models.MovieLink
@{
    ViewBag.Title = "UpdateMovieLink";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>修改下载链接</h2>
<p>
    @Html.ActionLink("返回", "MovieLinks", new { id = Model.MovieID }, new { @class = "button-cancel" })
</p>

@using (Html.BeginForm("UpdateMovieLink", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="section">
        <div class="section-header">
            <h3>名称</h3>
        </div>
        <div class="section-body">
            <div class="row">
                @Html.TextBoxFor(m => m.LinkName, new { @class = "title" }) <cite>*</cite>
                @Html.ValidationMessageFor(m => m.LinkName)
            </div>
        </div>
    </div>
    <div class="section">
        <div class="section-header">
            <h3>磁力链接</h3>
        </div>
        <div class="section-body">
            <div class="row">
                @Html.TextBoxFor(m => m.Magnet, new { @class = "title" }) <cite>*</cite>
                @Html.ValidationMessageFor(m => m.Magnet)
            </div>
        </div>
    </div>
    <div class="section">
        <div class="section-header">
            <h3>文件</h3>
        </div>
        <div class="section-body">
            <div class="row">
                <input type="file" name="file" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.LinkID)
    @Html.HiddenFor(m => m.DownloadCount)
    @Html.HiddenFor(m => m.LinkUrl)

    <div class="section">
        <button type="submit" class="button-save">提交</button>
    </div>
}
