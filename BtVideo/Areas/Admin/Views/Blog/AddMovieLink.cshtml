@model BtVideo.Models.MovieLink
@{
    ViewBag.Title = "AddMovieLink";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddMovieLink", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="section">
        <div class="section-header">
            <h3>名称</h3>
        </div>
        <div class="section-body">
            <div class="row">
                @Html.TextBoxFor(m => m.LinkName, new { @class = "title" }) <cite>*</cite>
                @Html.ValidationMessageFor(m => m.LinkName)
            </div>
        </div>
    </div>
    <div class="section">
        <div class="section-header">
            <h3>文件</h3>
        </div>
        <div class="section-body">
            <div class="row">
                <input type="file" name="file" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.MovieID)
    <div class="section">
        <button type="submit" class="button-save">提交</button>
    </div>
}
