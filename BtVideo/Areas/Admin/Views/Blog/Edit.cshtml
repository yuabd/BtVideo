@model BtVideo.Models.Admin.BlogViewModel

@{
    ViewBag.Title = "编辑博客文章";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="/Plugins/xheditor/xheditor-1.1.14-zh-cn.min.js" type="text/javascript"></script>

	<script type="text/javascript">
		$(function () {
			$("#Blog_MovieContent").xheditor({ upImgUrl: "/Admin/Blog/UploadPicture", upImgExt: "jpg,jpeg,gif,png", html5Upload: false });

			$("#main-menu").accordion("option", "active", 1);
		})
	</script>
}

<h2>编辑博客</h2>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.Partial("_Form")

	@Html.HiddenFor(m => m.Blog.MovieID)
	@Html.HiddenFor(m => m.Blog.AuthorID)
    @Html.HiddenFor(m => m.Blog.PictureFile)

	<div class="section">
		<button type="submit" class="button-save">提交</button>
	</div>
}
