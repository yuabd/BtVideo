@model Studio.Models.Others.SiteSettings
@{
	ViewBag.Title = "网站设置";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	 <script type="text/javascript">
	 	$(function () {
	 		$("#tabs").tabs();
	 	});
    </script>
}

@*<h2>设置</h2>*@
<p></p>
<div id="tabs">
    <ul>
        <li><a href="#tabs-1">站点信息</a></li>
        <li><a href="#tabs-2">联系方式</a></li>
    </ul>
    <div id="tabs-1">
	@using (Html.BeginForm("Company", "Settings"))
	{
	<div class="section">
		<div class="section-header">
			<h3>基本信息</h3>
		</div>
		<div class="section-body">
			<div class="row">
				<label>公司名称:</label>
				@Html.TextBoxFor(m => m.CompanyName, new { @class = "large", title = "用于显示在页面底部的公司名字" })
				@Html.ValidationMessageFor(m => m.CompanyName)
				<dfn>用于显示在页面底部的公司名字</dfn>
			</div>
			<div class="row">
				<label>网址:</label>
				@Html.TextBoxFor(m => m.CompanyWebsite, new { @class = "large", title = "网站URL，将作为链接显示在页面底部" })
				@Html.ValidationMessageFor(m => m.CompanyWebsite)
				<dfn>网站URL，将作为链接显示在页面底部</dfn>
			</div>
			<div class="row">
				<label>ICP网站备案信息:</label>
				@Html.TextBoxFor(m => m.ICP, new { @class = "large", title = "用于页面底部显示ICP备案信息" })
				@Html.ValidationMessageFor(m => m.ICP)
				<dfn>用于页面底部显示ICP备案信息</dfn>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="section-header">
			<h3>SEO</h3>
		</div>
		<div class="section-body">
			<div class="row">
				<label>站点名称:</label>
				@Html.TextBoxFor(m => m.Title, new { @class = "large", title = "站点名称，将显示在浏览器窗口标题等位置" })
				@Html.ValidationMessageFor(m => m.Title)
				<dfn>站点名称，将显示在浏览器窗口标题等位置</dfn>
			</div>
			<div class="row">
				<label class="textarea">站点介绍:</label>
				@Html.TextAreaFor(m => m.Description, new { @class = "large", title = "站点介绍，用于SEO,搜索引擎优化" })
				@Html.ValidationMessageFor(m => m.Description)
				<dfn>站点介绍，用于SEO,搜索引擎优化</dfn>
			</div>
			<div class="row">
				<label>Meta keywords:</label>
				@Html.TextBoxFor(m => m.Keywords, new { @class = "large", title = "设置网站的关键字,多个关键字之间用,分开" })
				@Html.ValidationMessageFor(m => m.Keywords)
				<dfn>设置网站的关键字,多个关键字之间用,分开</dfn>
			</div>
		</div>
	</div>
	<div class="section">
		<button type="submit" class="button-save">提交</button>
	</div>
		}
    </div>
    <div id="tabs-2">
         @using (Html.BeginForm("SiteSettings", "Settings"))
		 {
	<div class="section">
		<div class="section-body">
			<div class="row">
				<label>公司管理员邮箱:</label>
				@Html.TextBoxFor(m => m.CompanyEmail, new { @class = "large", title = "将作为接收系统通知的邮箱" })
				@Html.ValidationMessageFor(m => m.CompanyEmail)
				<dfn>将作为接收系统通知的邮箱</dfn>
			</div>
			<div class="row">
				<label>自动邮箱地址:</label>
				@Html.TextBoxFor(m => m.CompanyEmailAuto, new { @class = "large", title = "将作为系统发邮件的时候的发件人地址" })
				@Html.ValidationMessageFor(m => m.CompanyEmailAuto)
				<dfn>将作为系统发邮件的时候的发件人地址</dfn>
			</div>
			<div class="row">
				<label>公司地址:</label>
				@Html.TextBoxFor(m => m.Address, new { @class = "large", title = "公司地址，将显示在页面底部的联系方式处" })
				@Html.ValidationMessageFor(m => m.Address)
				<dfn>公司地址，将显示在页面底部的联系方式处</dfn>
			</div>
			<div class="row">
				<label>QQ:</label>
				@Html.TextBoxFor(m => m.QQ, new { @class = "large", title = "公司QQ，将显示在页面底部的联系方式处" })
				@Html.ValidationMessageFor(m => m.QQ)
				<dfn>公司QQ，将显示在页面底部的联系方式处</dfn>
			</div>
			<div class="row">
				<label>电话/手机:</label>
				@Html.TextBoxFor(m => m.CompanyPhoneNo, new { @class = "large", title = "将作为显示网站中有用到手机号码的地方" })
				@Html.ValidationMessageFor(m => m.CompanyPhoneNo)
				<dfn>将作为显示网站中有用到手机号码的地方</dfn>
			</div>
		</div>
	</div>
	<div class="section">
		<button type="submit" class="button-save">提交</button>
	</div>
		 }
    </div>
</div>

