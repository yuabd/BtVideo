
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row">
    <h3 id="grid" class="page-header">今日热门<small></small></h3>
    @foreach (var item in (List<BtVideo.Models.Movie>)ViewBag.suiji)
            {
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 ">
            <a href="/@item.MovieID" title="@item.MovieTitle">
                <div class="thumbnail" style="height: 250px; overflow:hidden;">
                    <img src="http://bt.henhaoji.com.cn/@(item.PictureThumbnail)" alt="@item.MovieTitle" style="width: 100%;" />
                </div>
                <div class="caption">
                    <h4 class="text-overflow">@(item.MovieTitle)<span class="badge pull-right">@Model.Blog.Grade.ToString("0.0")</span></h4>
                </div>
            </a>
        </div>
    }
</div>