<section class="col-lg-9 col-md-12">
    <h3 class="h3-cat-list">
        <span>
            All Posts
        </span>
        <span class="badge hidden-xs">@ViewBag.Count</span>
        <span class="badge visible-xs pull-right">@ViewBag.Count</span>
    </h3>
    <hr />
    @foreach (var item in Model.Blogs)
    {
        <article class="article-post-summary">
            <div class="post-date-box hidden-xs">
                <h1 class="post-date-day">@item.Grade</h1>
                <div class="post-date-month">
                    @item.PageVisits
                </div>
            </div>
            <div class="post-summary-box">
                <time datetime="@item.DateCreated" class="none">@item.DateCreated</time>

                <div class="col-md-12">
                    <div class="col-md-3">
                        <a href="/@item.Slug" title="@item.MovieTitle">
                            <img src="@item.PictureFolder/@item.PictureThumbnail" class="img-responsive" style="width: 100%;" />
                        </a>
                    </div>
                    <div class="col-md-9 post-summary-text">

                        <a href="/@item.Slug" title="@item.MovieTitle">
                            <h4 class="post-summary-title">
                                @item.MovieTitle
                            </h4>
                            <p>
                                @item.MetaDescription
                            </p>
                        </a>
                        <div class="post-summary-tags">
                            @foreach (var tag in item.MovieTags)
                            {
                                <a href="/tags/@(tag.Tag)" title="@tag.Tag" class="post-summary-tag">@tag.Tag</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <div class="bor hidden-xs"></div>
        <hr class="hidden-xs">
    }

    <div class="pull-right">
        <div>
            @Model.Blogs.Pager("pager")
        </div>
    </div>
</section>

