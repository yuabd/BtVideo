    <section class="top-tags">
        <div class="panel panel-default">
            <div class="panel-heading">Top Tags</div>
            <div class="panel-body">
                <div class="toptags-list">
                    @foreach (var item in Model)
                    {
                        <a href="/tags/@(item.Tag)">@item.Tag</a>
                    }
                </div>
            </div>
        </div>
    </section>
    <div class="bor"></div>
    <section class="recent-comments">
        <div class="panel panel-default">
            <div class="panel-heading">Recent Comments</div>
            <div class="list-group">
                @foreach (var item in new BtVideo.Services.BlogService().GetComments().Where(m => m.IsPublic == true).Take(10).ToList())
                {
                    <div class="list-group-item">
                        <strong data-toggle="tooltip" data-placement="top" title="" data-original-title="@item.DateCreated">
                            <i class="fa fa-user"></i>
                            @item.Name
                        </strong>
                        <p class="justifytext text-muted recent-comment-item-content">
                            @item.Message
                        </p>
                    </div>
                    <div class="recent-comment-item-footer">
                        <a href="/@(item.Movies.Slug)" target="_blank"><i class="fa fa-bookmark-o"></i> @item.Movies.MovieTitle</a>
                    </div>
                }
            </div>
        </div>
    </section>
